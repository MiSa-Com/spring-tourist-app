<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="20230711141700" author="sang.ngongoc">
        <createTable tableName="users">
            <column name="id" type="bigint" />
            <column name="create_by" type="bigint"/>
            <column name="update_by" type="bigint"/>
            <column name="create_at" type="bigint"/>
            <column name="update_at" type="bigint"/>
            <column name="status" type="bit(1)"/>
            <column name="first_name" type="nvarchar(255)"/>
            <column name="last_name" type="nvarchar(255)"/>
            <column name="date_of_birth" type="bigint"/>
            <column name="telephone" type="nvarchar(255)"/>
            <column name="email" type="nvarchar(255)"/>
            <column name="password" type="nvarchar(255)"/>
        </createTable>
        <addPrimaryKey tableName="users" columnNames="id"/>
        <addAutoIncrement columnDataType="bigint" tableName="users" columnName="id"/>
<!--        <addNotNullConstraint tableName="user_subject_relation" columnName="is_leader" columnDataType="bit(1)"/>-->
<!--        <addDefaultValue tableName="user_subject_relation" columnName="is_leader" defaultValueBoolean="false"/>-->
    </changeSet>

</databaseChangeLog>
